+package net.sf.l2j.gameserver.handler.itemhandlers;
+
+import net.sf.l2j.Config;
+import net.sf.l2j.gameserver.handler.IItemHandler;
+import net.sf.l2j.gameserver.model.actor.Playable;
+import net.sf.l2j.gameserver.model.actor.Player;
+import net.sf.l2j.gameserver.model.item.instance.ItemInstance;
+
+/**
+ * Vinícius Gonçalves
+ *
+ */
+public class CleanPkItem implements IItemHandler
+{
+    @Override
+    public void useItem(Playable playable, ItemInstance item, boolean forceUse)
+    {
+        if (!Config.ENABLE_CLEANPK_ITEM)
+            return;
+
+        if (!(playable instanceof Player player))
+            return;
+
+        if (player.getPkKills() <= 0)
+        {
+            player.sendMessage("Você não possui PKs para limpar.");
+            return;
+        }
+
+        if (!player.destroyItemByItemId(
+                Config.CLEANPK_ITEM_ID,
+                Config.CLEANPK_ITEM_AMOUNT,
+                true))
+        {
+            player.sendMessage("Você não possui o item necessário.");
+            return;
+        }
+
+        int removidos = Math.min(Config.CLEANPK_REMOVE, player.getPkKills());
+        player.setPkKills(player.getPkKills() - removidos);
+
+        player.sendMessage("Você removeu " + removidos + " PK(s) com sucesso.");
+        player.broadcastUserInfo();
+    }
+}

